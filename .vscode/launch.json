{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Listen for Xdebug",
      "type": "php",
      "request": "launch",
      "port": 9003,
      "stopOnEntry": false,
      "pathMappings": {
        "C:/xampp/htdocs/project": "${workspaceFolder}"
      }
    },
    {
      "name": "Launch current script (CLI)",
      "type": "php",
      "request": "launch",
      "program": "${file}",
      "runtimeExecutable": "C:\\xampp\\php\\php.exe",
      "cwd": "${fileDirname}"
    }
  ]
}
